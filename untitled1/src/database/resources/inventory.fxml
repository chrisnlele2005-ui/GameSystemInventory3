<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/25.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.controllers.InventoryController"
            style="-fx-background-color: black;">

    <!-- Top: Title and Statistics -->
    <top>
        <VBox spacing="10" style="-fx-background-color: black;">
            <padding>
                <Insets top="15" right="15" bottom="10" left="15"/>
            </padding>
            <Label text="Game Inventory System"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: limegreen;"/>
            
            <!-- Statistics Panel -->
            <HBox spacing="20" style="-fx-background-color: #1a1a1a; -fx-padding: 10;">
                <VBox spacing="5">
                    <Label fx:id="totalItemsLabel" text="Total Items: 0"
                           style="-fx-text-fill: limegreen; -fx-font-size: 12px;"/>
                    <Label fx:id="usedSlotsLabel" text="Slots: 0 / 32"
                           style="-fx-text-fill: limegreen; -fx-font-size: 12px;"/>
                </VBox>
                <VBox spacing="5">
                    <Label fx:id="totalWeightLabel" text="Total Weight: 0.0 / 50.0"
                           style="-fx-text-fill: limegreen; -fx-font-size: 12px;"/>
                    <Label fx:id="weightPercentageLabel" text="Weight Usage: 0%"
                           style="-fx-text-fill: limegreen; -fx-font-size: 12px;"/>
                </VBox>
                <VBox spacing="5" prefWidth="400">
                    <Label fx:id="categoryBreakdownLabel" text="Categories: "
                           style="-fx-text-fill: limegreen; -fx-font-size: 12px; -fx-wrap-text: true;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Inventory Table -->
    <center>
        <VBox spacing="10" style="-fx-background-color: black;">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <TableView fx:id="inventoryTable" prefHeight="250"
                       style="-fx-background-color: black; -fx-control-inner-background: black; -fx-text-background-color: limegreen; -fx-table-cell-border-color: limegreen;">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100"/>
                    <TableColumn fx:id="weightColumn" text="Weight" prefWidth="80"/>
                    <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Left: Add Item Panel -->
    <left>
        <VBox spacing="10" prefWidth="300" style="-fx-background-color: #1a1a1a;">
            <padding>
                <Insets top="15" right="10" bottom="15" left="15"/>
            </padding>
            <Label text="Add Item" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: limegreen;"/>
            
            <TextField fx:id="idField" promptText="ID"
                       style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            <TextField fx:id="nameField" promptText="Name *"
                       style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            <ComboBox fx:id="categoryComboBox" promptText="Category *"
                      style="-fx-background-color: black; -fx-text-fill: limegreen;"/>
            <TextField fx:id="weightField" promptText="Weight *"
                       style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            <TextField fx:id="quantityField" promptText="Quantity *"
                       style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            
            <!-- Weapon-specific fields -->
            <Label text="Weapon Properties" style="-fx-text-fill: limegreen; -fx-font-size: 12px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="weaponTypeComboBox" promptText="Weapon Type"
                      style="-fx-background-color: black; -fx-text-fill: limegreen;"/>
            <TextField fx:id="damageField" promptText="Damage"
                       style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            
            <!-- Armor-specific fields -->
            <Label text="Armor Properties" style="-fx-text-fill: limegreen; -fx-font-size: 12px; -fx-font-weight: bold;"/>
            <TextField fx:id="armorTypeField" promptText="Armor Type"
                       style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            <TextField fx:id="defenseField" promptText="Defense"
                       style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            
            <!-- Consumable-specific fields -->
            <Label text="Consumable Properties" style="-fx-text-fill: limegreen; -fx-font-size: 12px; -fx-font-weight: bold;"/>
            <TextField fx:id="effectField" promptText="Effect"
                       style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            <TextField fx:id="effectValueField" promptText="Effect Value"
                       style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            
            <Button text="Add Item" onAction="#addItem"
                    style="-fx-background-color: limegreen; -fx-text-fill: black; -fx-font-weight: bold;"/>
        </VBox>
    </left>

    <!-- Right: Filters and Actions -->
    <right>
        <VBox spacing="10" prefWidth="250" style="-fx-background-color: #1a1a1a;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="10"/>
            </padding>
            <Label text="Search &amp; Filters" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: limegreen;"/>
            
            <TextField fx:id="searchField" promptText="Search by name"
                       onAction="#searchItem"
                       style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            
            <ComboBox fx:id="filterCategoryComboBox" promptText="Category"
                      style="-fx-background-color: black; -fx-text-fill: limegreen;"/>
            
            <Label text="Weight Range" style="-fx-text-fill: limegreen; -fx-font-size: 12px;"/>
            <HBox spacing="5">
                <TextField fx:id="minWeightField" promptText="Min"
                           style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
                <TextField fx:id="maxWeightField" promptText="Max"
                           style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            </HBox>
            
            <TextField fx:id="minDamageField" promptText="Min Damage"
                      style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            <TextField fx:id="minDefenseField" promptText="Min Defense"
                      style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            
            <ComboBox fx:id="weaponTypeFilterComboBox" promptText="Weapon Type"
                      style="-fx-background-color: black; -fx-text-fill: limegreen;"/>
            
            <HBox spacing="5">
                <Button text="Apply" onAction="#applyFilters"
                        style="-fx-background-color: limegreen; -fx-text-fill: black;"/>
                <Button text="Clear" onAction="#clearFilters"
                        style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            </HBox>
            
            <Separator/>
            
            <Label text="Actions" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: limegreen;"/>
            <Button text="Remove Selected" onAction="#removeItem"
                    style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
            <Button text="Save to DB" onAction="#saveInventory"
                    style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            <Button text="Load from DB" onAction="#loadInventory"
                    style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            <Button text="Reset Inventory" onAction="#resetInventory"
                    style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
            
            <Separator/>
            
            <Label text="Export" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: limegreen;"/>
            <Button text="Export to CSV" onAction="#exportToCSV"
                    style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
            <Button text="Export to JSON" onAction="#exportToJSON"
                    style="-fx-background-color: black; -fx-text-fill: limegreen; -fx-border-color: limegreen;"/>
        </VBox>
    </right>

    <!-- Bottom: Action Buttons -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: black;">
            <padding>
                <Insets top="10" right="15" bottom="15" left="15"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>
