<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="12"
      xmlns="http://javafx.com/javafx/25.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.controllers.InventoryController"
      style="-fx-background-color: white;">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Game Inventory System"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="inventoryTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="120"/>
            <TableColumn fx:id="weightColumn" text="Weight" prefWidth="90"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="90"/>
        </columns>
    </TableView>

    <HBox spacing="8">
        <TextField fx:id="idField" promptText="ID"/>
        <TextField fx:id="nameField" promptText="Name"/>
        <TextField fx:id="categoryField" promptText="Category (Weapon/Armor/Consumable)"/>
        <TextField fx:id="weightField" promptText="Weight"/>
        <TextField fx:id="quantityField" promptText="Quantity"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Add" onAction="#addItem"/>
        <Button text="Remove" onAction="#removeItem"/>
        <Button text="Save" onAction="#saveInventory"/>
        <Button text="Load" onAction="#loadInventory"/>
    </HBox>

</VBox>